{
  "name": "kb-comment",
  "version": "1.0.0",
  "description": "open source blog comment system",
  "main": "index.js",
  "scripts": {
    "start": "parcel serve client/client.ts client/index.html client/themes/{light,dark}.styl --out-dir ./templates/static --public-url ./static",
    "build": "parcel build client/client.ts client/index.html client/themes/{light,dark}.styl --out-dir ./templates/static --public-url ./static --experimental-scope-hoisting --no-content-hash",
    "test": "parcel serve client/demo.html --port 5000 --open"
  },
  "author": "kwokronny",
  "license": "ISC",
  "devDependencies": {
    "cssnano": "^4.1.10",
    "stylus": "^0.54.8",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@hiyoz/stylus-shortcut": "^1.1.0"
  }
}
